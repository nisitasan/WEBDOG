mixin ArticleBox(title, content, button, imgName)
    .box
        .content
            h1=title
            p=content
            a(href="#")=button
        .picture
            img(src=imgName, alt="dog")
<!DOCTYPE html>
html(lang="zh")
    head
        meta(charset="UTF-8")
        title DogLife.
        link(rel="stylesheet", href="index.css")
    body 
        .main
            include nav.pug
            +ArticleBox("標題","內容","按鈕","dog1.jpg")